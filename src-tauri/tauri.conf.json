{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "musicViz",
  "version": "0.1.0",
  "identifier": "com.dennisjackson.musicviz",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "musicViz",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["musicviz"]
      }
    }
  }
}
